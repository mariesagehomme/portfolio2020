{% extends 'base.html.twig' %}

{% block title %}Portfolio Marie Sagehomme{% endblock %}

{% block body %}
    <div class="container">
    <div class="description">
        <div class="box">
            <div class="title">
                <div class="block">.</div>    
                <h1>Marie Sagehomme<span>.</span></h1>
            </div>
            <div class="role">
                <div class="block">.</div>
                 <h2>Front-end developer</h2>
            </div>
        </div>
        <div class="intro">
            <p>I'm a front-end developer & webdesigner who love creating websites, new design and coding! I'm curious and love sharing.
            <button class="btn-secondary"><a href="mailto:marie.sagehomme@gmail.com">contact me</a></button> if you want more information about my works</p>
        </div> 
    </div>    
    <h3>Projects back</h3>
    <div class="projects-container">
        {% for projectBack in projectsBack %}
            <div class="project">
                <p>{{ projectBack.technology }}</p>
                <p>{{ projectBack.name }}</p>
                <p>{{ projectBack.date }}</p>
                
                {% if projectBack.link %}
                    <button class="btn-primary"><a href="{{ projectBack.link }}" target="_blank">Github</a></button>
                    {% else %}
                    <button class="btn-primary"><a href="#" class="btn-primary">Show</a></button>
                {% endif %}                
            </div> 
            <hr>
        {% endfor %}
     </div>
     
     <h3>Projects front</h3>
     <div class="projects-container">
        {% for projectFront in projectsFront %}
            <div class="project">
                <p>{{ projectFront.technology }}</p>
                <p>{{ projectFront.name }}</p>
                <p>{{ projectFront.date }}</p>
                
                {% if projectFront.link %}
                    <button class="btn-primary"><a href="{{ projectFront.link }}" target="_blank">Github</a></button>
                    {% else %}
                    <button class="btn-primary"><a href=" {{ path('home_show', {'id':projectFront.id}) }}">Show</a></button>
                {% endif %}                
            </div> 
            <hr>
        {% endfor %}
     </div>
        
    <h3>Photography</h3>
    <div class="carousel" data-flickity='{ "wrapAround": true }'>
        <div class="carousel-cell">
            <img src="{{ asset('images/manga.jpg') }}" alt="manga">
        </div>
        <div class="carousel-cell">
            <img src="{{ asset('images/secret.jpg') }}" alt="secret">
        </div>
        <div class="carousel-cell">
            <img src="{{ asset('images/eye.jpg') }}" alt="eye">
        </div>
        <div class="carousel-cell">
            <img src="{{ asset('images/shadow.jpg') }}" alt="shadow">
        </div>
    </div>
    </div>      

{% endblock %}